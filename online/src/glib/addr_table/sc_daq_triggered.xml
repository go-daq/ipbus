<module id="TOP">
	<register id="id" address="0x0" description="ID register" fwinfo="endpoint;width=1">
		<word id="magic" address="0x0"/>
		<word id="info" address="0x1">
			<mask id="fwrev" mask="0xff"/>
			<mask id="slot" mask="0xf00"/>
		</word>
	</register>
	<register id="buffer" address="0x2" description="readout buffer" fwinfo="endpoint;width=1">
		<word id="data" address="0x0" mode="port" size="0x1000"/>
		<word id="count" address="0x1"/>
	</register>
	<register id="csr" address="0x4" description="ctrl/status register" fwinfo="endpoint;width=2">
		<word id="ctrl" address="0x0">
			<mask id="nuke" mask="0x1"/>
			<mask id="soft_rst" mask="0x2"/>
			<mask id="mmcm_rst" mask="0x4"/>
			<mask id="clk_sel" mask="0x8"/>
			<mask id="idelctrl_rst" mask="0x10"/>
			<mask id="prog" mask="0x20"/>
			<mask id="chan_sel" mask="0xff00"/>
			<mask id="board_id" mask="0xf0000000"/>
		</word>
		<word id="window_ctrl" address="0x1">
			<mask id="lag" mask="0xffff"/>
			<mask id="size" mask="0x3ff0000"/>
		</word>
		<word id="stat" address="0x2">
			<mask id="clk_lock" mask="0x1"/>
			<mask id="clk_stop" mask="0x2"/>
			<mask id="idelctrl_rdy" mask="0x4"/>
			<mask id="ro_stop" mask="0x8"/>			
		</word>
	</register>
	<register id="chan_csr" address="0x8" description="channel ctrl" fwinfo="endpoint;width=1">
		<word id="ctrl" address="0x0">
			<mask id="sync_en" mask="0x1"/>
			<mask id="phase" mask="0x2"/>
			<mask id="src_sel" mask="0x4"/>
			<mask id="invert" mask="0x8"/>
			<mask id="shift" mask="0x70"/>
			<mask id="ro_en" mask="0x80"/>
			<mask id="trig_en" mask="0x100"/>
			<mask id="stop_mask" mask="0x200"/>
			<mask id="t_thresh" mask="0x3fff0000"/>
		</word>
		<word id="stat" address="0x1">
			<mask id="bp" mask="0x1"/>
			<mask id="err" mask="0x2"/>
			<mask id="derand_rdy" mask="0x4"/>
			<mask id="derand_evt" mask="0x8"/>
			<mask id="derand_aempty" mask="0x10"/>
			<mask id="derand_afull" mask="0x20"/>
			<mask id="derand_empty" mask="0x40"/>
			<mask id="derand_full" mask="0x80"/>
			<mask id="idel_ctr" mask="0x1f00"/>
		</word>
	</register>
	<module id="timing" address="0x10" module="file://sc_timing.xml"/>
	<register id="trig" address="0x20" description="trigger csr" fwinfo="endpoint;width=1">
		<word id="ctrl" address="0x0">
			<mask id="clr" mask="0x1"/>
		</word>
		<word id="stat" address="0x1"/>
	</register>
	<register id="sysmon" address="0x400" mode="block" size="0x400" description="sysmon access" fwinfo="endpoint;width=9"/>
</module>
