<module id="timing" description="sample clock domain control" fwinfo="endpoint">
	<register id="csr" address="0x0" description="ctrl/status register" fwinfo="endpoint;width=1">
		<word id="ctrl" address="0x0">
			<mask id="rst" mask="0x1"/>
			<mask id="ctr_rst" mask="0x2"/>
			<mask id="ctr_cap" mask="0x4"/>
			<mask id="inc" mask="0x8"/>
			<mask id="buf_rst" mask="0x10"/>
			<mask id="trig" mask="0x20"/>
			<mask id="sync_out" mask="0x40"/>
			<mask id="sync_en" mask="0x80"/>
			<mask id="fake" mask="0x100"/>
			<mask id="rand_out" mask="0x200"/>
			<mask id="rand_int" mask="0x400"/>
			<mask id="rand_div" mask="0x1f0000"/>
		</word>
	</register>
	<register id="counter" address="0x4" description="local sample counter" fwinfo="endpoint;width=1">
		<word id="bottom" address="0x0"/>
		<word id="top" address="0x1"/>
	</register>
	<register id="trig_ctr" address="0x6" description="trigger counter" fwinfo="endpoint;width=0"/>
</module>
