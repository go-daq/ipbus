<module id="TOP">
	<register id="id" address="0x0" description="ID register" fwinfo="endpoint;width=1">
		<word id="magic" address="0x0"/>
		<word id="info" address="0x1">
			<mask id="fwrev" mask="0xff"/>
			<mask id="slot" mask="0xf00"/>
		</word>
	</register>
	<register id="csr" address="0x2" description="ctrl/status register" fwinfo="endpoint;width=1">
		<word id="ctrl" address="0x0">
			<mask id="nuke" mask="0x1"/>
			<mask id="mmcm_rst" mask="0x2"/>
		</word>
		<word id="stat" address="0x1">
			<mask id="clk_lock" mask="0x1"/>
			<mask id="clk_stop" mask="0x2"/>
		</word>
	</register>
	<register id="sync_csr" address="0x4" description="sync ctrl/status register" fwinfo="endpoint;width=0">
		<word id="ctrl" address="0x0">
			<mask id="rst" mask="0x1"/>
			<mask id="trig" mask="0x2"/>
			<mask id="rand_en" mask="0x4"/>
			<mask id="rand_div" mask="0x1f00"/>
		</word>
	</register>
</module>
